--ansi


--style=full


--height=~100%


--layout=reverse-list
--border=double


--multi
--highlight-line
--pointer="ðŸ‘‰"
--marker="âœ…"
--ellipsis="..."
--list-border=sharp


--prompt="$> "
--info=inline-right
--input-border=block


--preview="
  if (file -b --mime-type {} | grep -q '^image/') && command -v chafa &>/dev/null; then
    chafa --clear --margin-bottom=4 --margin-right=4 --view-size=${FZF_PREVIEW_COLUMNS}x${FZF_PREVIEW_LINES} --colors=full --symbols=all {}
  elif [[ -f {} ]]; then
    bat --terminal-width $FZF_PREVIEW_COLUMNS --force-colorization --line-range=:200 {} || cat {}
  elif [[ -d {} ]]; then
    (tree -a -C {} || lf {} || ls -al {}) | less
  else
    echo {} 2>/dev/null
  fi
"
--preview-border=rounded
--preview-window=right:80%:wrap
